{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": [
    "dependencies",
    "no-stale"
  ],
  "commitMessagePrefix": "⬆️",
  "commitMessageTopic": "{{depName}}",
  "semanticCommits": "enabled",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^build.yaml$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\\s+(?<depName>ghcr\\.io/[a-zA-Z0-9-_]+/[a-zA-Z0-9-_]+):(?<currentValue>v?\\d+\\.\\d+(?:\\.\\d+)?)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "FROM (?<depName>ghcr\\.io/[a-zA-Z0-9-_]+/[a-zA-Z0-9-_]+):(?<currentValue>v?\\d+\\.\\d+(?:\\.\\d+)?)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\\s\\s(?<package>[a-z0-9-]+)=(?<currentValue>[a-z0-9-_.]+)\\s+"
      ],
      "versioningTemplate": "loose",
      "datasourceTemplate": "repology",
      "depNameTemplate": "alpine_3_21/{{package}}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "repology"
      ],
      "automerge": true
    },
    {
      "groupName": "Base Images",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/ghcr.io/pocket-id/pocket-id/"
      ]
    }
  ]
}
